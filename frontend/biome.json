{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",

  "files": {
    "includes": ["**", "!**/node_modules", "!**/.next", "!**/out", "!**/dist", "!**/.turbo"]
  },

  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },

  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,

      "correctness": {
        "noUnusedVariables": "error",
        "noUnusedImports": "error",
        "useExhaustiveDependencies": "warn",
        "useHookAtTopLevel": "error"
      },

      "style": {
        "useConst": "error",
        "noNonNullAssertion": "warn"
      },

      "complexity": {
        "noExtraBooleanCast": "error",
        "noUselessFragments": "warn"
      },

      "suspicious": {
        "noExplicitAny": "warn",
        "noDoubleEquals": "error",
        "noArrayIndexKey": "warn"
      },

      "a11y": {
        "useAltText": "error",
        "useAnchorContent": "warn",
        "useButtonType": "warn",
        "useValidAnchor": "error"
      },

      "nursery": {
        "useSortedClasses": "off"
      }
    },
    "domains": {
      "next": "recommended",
      "react": "recommended"
    }
  },

  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "trailingCommas": "es5",
      "arrowParentheses": "asNeeded"
    },
    "jsxRuntime": "transparent"
  },

  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  }
}
